{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": [
		"src/**/*"
	]
}
